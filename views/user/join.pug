extends ../layout/main

block content
    .form_container
        form(action=routes.join, method="post")
            input(type="email", name="email", placeholder="계정명은 이메일을 입력해주세요.")
            input(type="text", name="name", placeholder="이름을 입력해주세요.")
            input(type="password", name="password", placeholder="암호를 입력해주세요.")
            input(type="password", name="password2", placeholder="암호를 다시 입력해주세요.")
            input(type="submit", value="회원가입")
        include ../partials/snsLogin