extends ../layout/main

block content
    .video_player
        video(src=`/${video.fileUrl}`, controls=true)
    .video_info
        .infoBox
            .infoBox_column
                h5.video_title=video.title  
                |Uploaded by
                a(href=routes.user_detail(video.creator.id))=video.creator.name
            .infoBox_column
                .infoBox_column-item
                    span.video_views 조회수 : #{video.views}회
                if loggedUser && (video.creator.id === loggedUser.id)    
                    .infoBox_column-item
                        a(href=routes.edit_video(video.id)) 비디오 수정
            .infoBox_column                                    
                p.video_description=video.description
    .video_comments
        .comments_column
            if video.comments.length === 1
                span.video_comment-number 댓글 1 comment
            else
                span.video_comment-number 댓글 #{video.comments.length} comments
        .comments_column
        .comments_column